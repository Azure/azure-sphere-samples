//------------------------------------------------------------------------------
function _atPlusAxRA(cmdStr$, rpt$)
  dim args
  rc = ExtractArgsCSV(cmdStr$,args,2,2)
  if rc == 0 then
    //convert the tag to an integer
    rc = SArgConvertToInt(0,-1,0,255)  //-1 will result in an error
    if rc!=RSP_OK then
