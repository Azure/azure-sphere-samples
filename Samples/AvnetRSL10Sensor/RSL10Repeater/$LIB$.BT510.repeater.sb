//******************************************************************************
// Start up code from here -equivalent to main() in a 'C' application
//******************************************************************************

Startup()
if rptrModeFlags & BT510_RPTR_ENABLED then

  //Operating in repeater or gateway mode
  RepeaterStartup()
  OnEvent  EVBLE_ADV_REPORT       call HndlrAdvReport510
  OnEvent  EVBLE_EXTADV_RPT       call HndlrExtAdvRpt510
  OnEvent  EVBLE_EXTSCN_RPT       call HndlrExtScnRpt510
  OnEvent  EVBLE_EXTADV_END       call HndlrExtAdvEnd510

  //disable handshaking by closing and reopening
  UARTFlags$ = "CN81N"
  rc = UARTInfo(0)
  if (rc != 0) then
      //UART is opened, close
      UARTClose()
  endif
  rc = UartOpen(UARTbaud, UARTTxBuf, UARTRxBuf, UARTFlags$)
  rc = gpiosetfunc(UART_SIONUM_RTS,SIOTYPE_DOUT,OUTPUT_INIT_LOW)  //RTS set low to assert
endif

