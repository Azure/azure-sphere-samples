//------------------------------------------------------------------------------
//------------------------------------------------------------------------------
sub AppendRspEnd(rsp as integer, byref bufferStr$ )
  dim tmpStr$
  if rsp == 0 then
    tmpStr$ = ok$
  elseif rsp > 99 then
    sprint #tmpStr$, integer.h' rsp
    tmpStr$ = er$ + right$(tmpStr$,4)
  elseif rsp > 0 then
    sprint #tmpStr$, "0";rsp
    tmpStr$ = er$ + right$(tmpStr$,2)
  else
    atParse=0
    exitsub
  endif
  bufferStr$ = bufferStr$ + tmpStr$ + "\r"
  atParse=1
endsub

