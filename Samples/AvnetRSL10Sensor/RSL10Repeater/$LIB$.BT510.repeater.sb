  if numOfChars<MAX_CHARACTERISTICS then
    numOfChars = numOfChars+1
    nIdx = numOfChars
    charHandles[nIdx]=charH
    exitfunc RSP_OK
  endif
endfunc RSP_TOO_MANY_CHARACTERISTICS

//------------------------------------------------------------------------------
